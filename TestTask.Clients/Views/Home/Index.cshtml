@{
    ViewData["Title"] = "Clients List";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        #messages {
            margin-top: 20px;
        }

        .message {
            padding: 5px;
            border-bottom: 1px solid #ccc;
        }
    </style>
</head>
<body>
    <h1>@ViewData["Title"]</h1>
    <div id="clients">
        <ul>
            <li><a href="@ViewData["ScalarApiExplorerUiUrl"]" target="_blank">Scalar API Explorer UI</a></li>
            <li><a href="@ViewData["MessageReceiverUrl"]" target="_blank">Message Receiver</a></li>
        </ul>
    </div>
    
</body>
</html>
